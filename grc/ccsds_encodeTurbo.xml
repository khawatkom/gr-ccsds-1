<?xml version="1.0"?>
<block>
  <name>encodeTurbo</name>
  <key>ccsds_encodeTurbo</key>
  <category>[ccsds]</category>
  <import>import ccsds</import>
  <make>ccsds.encodeTurbo($base, $type, $len_tag_key)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Codeword Size</name>
    <key>base</key>
    <type>int</type>
  </param>
  <param>
    <name>Code Type</name>
    <key>type</key>
    <type>int</type>
  </param>
  <param>
    <name>Length Tag</name>
    <key>len_tag_key</key>
    <type>string</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
