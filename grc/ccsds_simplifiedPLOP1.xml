<?xml version="1.0"?>
<block>
  <name>simplifiedPLOP1</name>
  <key>ccsds_simplifiedPLOP1</key>
  <category>[ccsds]</category>
  <import>import ccsds</import>
  <make>ccsds.simplifiedPLOP1($idleSeqLen, $acqSeqLen)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Idle Sequence Length</name>
    <key>idleSeqLen</key>
    <type>int</type>
  </param>

  <param>
    <name>Acquisition Sequence Length</name>
    <key>acqSeqLen</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>plop</name>
    <type>message</type>
  </source>
</block>
